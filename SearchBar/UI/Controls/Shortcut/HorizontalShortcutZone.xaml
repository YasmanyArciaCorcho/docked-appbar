<UserControl x:Class="SearchBar.UI.Controls.Shortcut.HorizontalShortcutZone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchBar.UI.Controls.Shortcut"
             mc:Ignorable="d" 
             d:DesignHeight="40">
    <ScrollViewer HorizontalAlignment="Left" Style="{StaticResource LeftScrollViewer}" x:Name="ShortcutScrollViewer" VerticalScrollBarVisibility="Auto">
        <WrapPanel x:Name="ShortcutZone" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Left"/>
    </ScrollViewer>
</UserControl>
