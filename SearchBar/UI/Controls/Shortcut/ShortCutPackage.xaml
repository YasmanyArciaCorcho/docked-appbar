<UserControl x:Class="SearchBar.UI.Controls.ShortCut.ShortCutPackage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchBar.UI.Controls"
             mc:Ignorable="d" Width="200">
    <ScrollViewer HorizontalAlignment="Left"  Height="40"  Style="{StaticResource LeftScrollViewer}" x:Name="ShortcutScrollViewer" VerticalScrollBarVisibility="Auto">
        <WrapPanel x:Name="shortcutsPackagePanel" Orientation="Horizontal" Margin="5,5,0,0"/>
    </ScrollViewer>
</UserControl>
