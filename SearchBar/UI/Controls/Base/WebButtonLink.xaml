<UserControl x:Class="SearchBar.UI.Controls.Base.WebButtonLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchBar.UI.Controls.Base"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Border Style="{StaticResource BorderInStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="18*"/>
                <ColumnDefinition Width="108*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="Image" Grid.Column="1" VerticalAlignment="Center"/>
            <WrapPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" Orientation="Vertical" >
                <TextBlock x:Name="MainTextBlock"  TextWrapping="Wrap" FontSize="18" Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="DescriptionBlock"  TextWrapping="Wrap" FontSize="12" Foreground="#CDCDCD"/>
            </WrapPanel>
        </Grid>
    </Border>
</UserControl>
